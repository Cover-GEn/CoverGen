    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.4",
    "rimraf": "^5.0.0",
    "source-map-explorer": "^2.5.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,md}": [
